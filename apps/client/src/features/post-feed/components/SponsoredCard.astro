---
/** 협찬 포스트 카드. secondary 컬러로 일반 카드와 시각적으로 구분한다. */
import type { Post } from "@/shared/types/post";
import type { Locale } from "@/shared/types/common";
import { getCategoryLabel, getSubCategoryLabel } from "@/shared/lib/i18n/categories";
import { getLocalePath } from "@/shared/lib/i18n/locales";
import { t } from "@/shared/lib/i18n/translations";

interface Props {
  post: Post;
  locale: Locale;
  /** Position index in the feed — index 0 receives LCP priority treatment */
  index: number;
}

const { post, locale, index } = Astro.props;

const isLcp = index === 0;
const postPath = `/${post.category}/${post.sub_category}/${post.slug}/`;
const localizedHref = getLocalePath(postPath, locale);

const categoryLabel = getCategoryLabel(post.category, locale);
const subCategoryLabel = getSubCategoryLabel(post.sub_category, locale);
const sponsoredLabel = t("post.sponsored", locale);
const ratingLabel = t("post.rating", locale);
---

<article class="group bg-secondary-50 border-2 border-secondary-400 rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-200">
  <a href={localizedHref} class="block" aria-label={post.title}>
    {/* Thumbnail */}
    <div class="relative w-full aspect-video overflow-hidden bg-secondary-100">
      <img
        src={post.thumbnail}
        alt={post.title}
        width="640"
        height="360"
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
        loading={isLcp ? "eager" : "lazy"}
        fetchpriority={isLcp ? "high" : "auto"}
        decoding={isLcp ? "sync" : "async"}
      />

      {/* Sponsored overlay badge on the image for strong visual signal */}
      <span class="absolute top-2 left-2 inline-block text-xs font-bold text-secondary-900 bg-secondary-400 rounded-full px-2.5 py-0.5 shadow-sm">
        {sponsoredLabel}
      </span>
    </div>

    {/* Card body */}
    <div class="p-4 flex flex-col gap-2">
      {/* Category badges */}
      <div class="flex items-center gap-1.5 flex-wrap">
        <span class="inline-block text-xs font-semibold text-white bg-secondary-500 rounded-full px-2.5 py-0.5">
          {categoryLabel}
        </span>
        <span class="inline-block text-xs font-normal text-secondary-700 bg-secondary-100 rounded-full px-2.5 py-0.5">
          {subCategoryLabel}
        </span>
      </div>

      {/* Title */}
      <h2 class="text-base font-bold text-gray-900 line-clamp-2 group-hover:text-secondary-700 transition-colors">
        {post.title}
      </h2>

      {/* Description */}
      <p class="text-sm text-gray-600 line-clamp-2">
        {post.description}
      </p>

      {/* Rating */}
      {post.rating > 0 && (
        <div class="flex items-center gap-1 mt-1" aria-label={`${ratingLabel}: ${post.rating}`}>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            class="w-4 h-4 text-yellow-400"
            aria-hidden="true"
          >
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
          <span class="text-sm font-semibold text-gray-700">{post.rating.toFixed(1)}</span>
        </div>
      )}
    </div>
  </a>
</article>
