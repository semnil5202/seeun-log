---
/** 포스트 상세의 협찬/추천 뱃지 조합. */

import SponsoredBadge from "@/shared/components/ui/SponsoredBadge.astro";

interface Props {
  isSponsored: boolean;
  isRecommended: boolean;
  label: string;
}

const { isSponsored, isRecommended, label } = Astro.props;
---

{(isSponsored || isRecommended) && (
  <div class="flex gap-2 mb-3">
    {isSponsored && <SponsoredBadge label={label} />}
    {isRecommended && <SponsoredBadge label={label} />}
  </div>
)}
