---
/** 반응형 헤더. PC는 PCHeader, Mobile은 MobileHeader를 CSS 토글로 전환한다. */

import PCHeader from "@/shared/components/layout/PCHeader.astro";
import MobileHeader from "@/shared/components/layout/MobileHeader.astro";
import type { Locale } from "@/shared/types/common";

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
---

<div class="sticky top-0 z-40 bg-white shadow-sm">
  <div class="hidden lg:block">
    <PCHeader locale={locale} />
  </div>

  <div class="block lg:hidden">
    <MobileHeader locale={locale} />
  </div>
</div>
