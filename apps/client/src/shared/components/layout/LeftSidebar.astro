---
/** PC 전용 좌측 사이드바. CategoryTree를 sticky 컨테이너에 렌더링한다. */

import CategoryTree from "@/shared/components/navigation/CategoryTree.astro";
import type { Locale } from "@/shared/types/common";

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
---

<aside
  class="hidden lg:block w-[180px] shrink-0"
  aria-label="Category sidebar"
>
  <div
    class="sticky top-20 max-h-[calc(100vh-5rem)] overflow-y-auto py-6 pr-4"
    style="-ms-overflow-style: none; scrollbar-width: thin;"
  >
    <CategoryTree locale={locale} />
  </div>
</aside>
