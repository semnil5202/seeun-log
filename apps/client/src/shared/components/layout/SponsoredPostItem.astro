---
/** 추천 포스트 단일 아이템. 현재 글과 slug가 일치하면 active 스타일을 적용한다. */

import { getLocalePath } from "@/shared/lib/i18n/locales";
import type { Locale } from "@/shared/types/common";
import type { LocalizedPost } from "@/shared/types/post";

interface Props {
  post: LocalizedPost;
  currentSlug?: string;
  locale: Locale;
}

const { post, currentSlug, locale } = Astro.props;
const isCurrent = currentSlug === post.slug;
const href = getLocalePath(
  `/${post.category}/${post.sub_category}/${post.slug}/`,
  locale,
);
---

<li
  class:list={[
    "border-b border-gray-100",
    isCurrent && "border-l-2 border-l-primary-500",
  ]}
>
  <a
    href={href}
    class:list={[
      "flex items-center gap-4 py-3 hover:bg-gray-50 transition-colors duration-150",
      isCurrent ? "pl-3" : "pl-0",
    ]}
    aria-current={isCurrent ? "page" : undefined}
  >
    <div class="flex-1 min-w-0">
      <span
        class:list={[
          "block text-base font-semibold leading-snug mb-1 truncate",
          isCurrent ? "text-primary-600" : "text-gray-900",
        ]}
      >
        {post.title}
      </span>
      <p class="text-sm text-gray-500 line-clamp-2 leading-relaxed">
        {post.description}
      </p>
    </div>
    <div class="shrink-0 w-20 h-20 rounded-lg overflow-hidden bg-gray-100">
      <img
        src={post.thumbnail}
        alt={post.title}
        width={80}
        height={80}
        loading="lazy"
        decoding="async"
        class="w-full h-full object-cover"
      />
    </div>
  </a>
</li>
