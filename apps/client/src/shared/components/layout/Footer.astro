---
/** 사이트 푸터. 모바일에서는 카테고리를 가로로 나열하여 SEO 크롤링을 보장한다. */

import { getCategoryTree } from "@/shared/lib/i18n/categories";
import { t } from "@/shared/lib/i18n/translations";
import { getLocalePath } from "@/shared/lib/i18n/locales";
import type { Locale } from "@/shared/types/common";

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;

const currentYear = new Date().getFullYear();
const categories = getCategoryTree(locale);
---

<footer class="bg-gray-50 border-t border-gray-200 mt-12">

  <div class="block lg:hidden px-4 pt-5 pb-4">
    <nav aria-label="Footer category navigation">
      {
        categories.map((category) => (
          <div class="mb-3">
            <a
              href={getLocalePath(`/${category.slug}/`, locale)}
              class="text-[12px] font-bold text-gray-900 uppercase tracking-wide hover:text-primary-500 transition-colors duration-150"
            >
              {category.label}
            </a>
            <div class="mt-1.5 flex flex-wrap gap-2">
              {category.subCategories.map((sub) => (
                <a
                  href={getLocalePath(`/${category.slug}/${sub.slug}/`, locale)}
                  class="text-[12px] text-gray-600 hover:text-primary-500 transition-colors duration-150"
                >
                  {sub.label}
                </a>
              ))}
            </div>
          </div>
        ))
      }
    </nav>
  </div>

  <div class="block lg:hidden mx-4 border-t border-gray-200" />

  <div class="max-w-screen-xl mx-auto px-4 lg:px-6 py-3 flex flex-col sm:flex-row items-center justify-between gap-2">

    <small class="text-[12px] text-gray-500 order-2 sm:order-1">
      {currentYear} {t("footer.copyright", locale)}. All rights reserved.
    </small>

    <nav
      aria-label="Footer navigation"
      class="flex items-center gap-3 order-1 sm:order-2"
    >
      <a
        href={getLocalePath("/privacy/", locale)}
        class="text-[12px] text-gray-500 hover:text-primary-500 transition-colors duration-150"
      >
        {t("footer.privacy", locale)}
      </a>
      <span class="text-gray-300 select-none" aria-hidden="true">|</span>
      <a
        href={getLocalePath("/sitemap.xml", locale)}
        class="text-[12px] text-gray-500 hover:text-primary-500 transition-colors duration-150"
        aria-label="XML Sitemap"
      >
        {t("footer.sitemap", locale)}
      </a>
    </nav>

  </div>

</footer>
