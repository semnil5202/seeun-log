---
/** 리스트 페이지 레이아웃. Layout + ThreeColumnLayout을 조합하여 3-column 그리드를 구성한다. */

import Layout from "@/layouts/Layout.astro";
import ThreeColumnLayout from "@/shared/components/layout/ThreeColumnLayout.astro";
import type { Locale } from "@/shared/types/common";
import { DEFAULT_LOCALE } from "@/shared/types/common";
import type { LocalizedPost } from "@/shared/types/post";

interface Props {
  title: string;
  description: string;
  canonical: string;
  locale?: Locale;
  path: string;
  ogImage?: string;
  sponsoredPosts?: LocalizedPost[];
}

const {
  title,
  description,
  canonical,
  locale = DEFAULT_LOCALE,
  path,
  ogImage,
  sponsoredPosts = [],
} = Astro.props;
---

<Layout
  title={title}
  description={description}
  canonical={canonical}
  ogImage={ogImage}
  locale={locale}
  path={path}
  type="website"
>
  <slot name="head" slot="head" />
  <ThreeColumnLayout
    locale={locale}
    sponsoredPosts={sponsoredPosts}
  >
    <slot />
  </ThreeColumnLayout>
</Layout>
