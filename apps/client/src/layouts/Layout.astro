---
import BaseHead from "@/shared/components/layout/BaseHead.astro";
import Header from "@/shared/components/layout/Header.astro";
import Footer from "@/shared/components/layout/Footer.astro";
import type { Locale } from "@/shared/types/common";
import { DEFAULT_LOCALE } from "@/shared/types/common";

interface Props {
  title: string;
  description: string;
  canonical: string;
  ogImage?: string;
  locale?: Locale;
  path: string;
  type?: "website" | "article";
}

const {
  title,
  description,
  canonical,
  ogImage,
  locale = DEFAULT_LOCALE,
  path,
  type = "website",
} = Astro.props;
---

<!doctype html>
<html lang={locale}>
  <head>
    <BaseHead
      title={title}
      description={description}
      canonical={canonical}
      ogImage={ogImage}
      locale={locale}
      path={path}
      type={type}
    />
    {/* SEO: Named slot so pages can inject JSON-LD <script> tags into <head> */}
    <slot name="head" />
  </head>
  <body class="min-h-screen bg-white text-gray-900 antialiased">
    <Header locale={locale} />
    <slot />
    <Footer locale={locale} />
  </body>
</html>
